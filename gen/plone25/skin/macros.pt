      <tal:fileField condition="python: (appyType['type'] == 'File')">
        <span tal:condition="showLabel" tal:content="label" class="appyLabel"></span>
        <metal:viewField use-macro="python: contextObj.widget(field.getName(), 'view', use_label=0)"/>
